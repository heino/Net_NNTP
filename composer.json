{
    "name": "heino/php-nntp",
    "description": "Modernized version of PEAR's Net_NNTP for communication with NNTP/Usenet servers.",
	"homepage": "https://github.com/heino/php-nntp",
    "type": "library",
    "license": "W3C",
    "authors": [
        {
            "name": "Heino H. Gehlsen",
            "email": "heino@gehlsen.dk",
            "role": "Lead"
        }
    ],
    "support": {
        "issues": "https://github.com/heino/php-nntp/issues",
        "source": "https://github.com/heino/php-nntp"
    },
    "autoload": {
        "psr-0": {
			"Net_NNTP_": "src.psr-0/"
		},
        "psr-4": {
			"Net\\NNTP\\": "src"
		},
		"files": [
			"src/Protocol/Exceptions.php"
		]
    },
    "require": {
		"php": ">=5.4",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    },
    "suggest": {
        "monolog/monolog": "Log to files, sockets, inboxes, databases and various web services"
    }
}
